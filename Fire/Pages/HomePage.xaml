<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fire.Pages.HomePage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <!-- App Logo -->
        <Image Source="app_logo.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center"/>

        <!-- Welcome Message -->
        <Label x:Name="WelcomeLabel" Text="Welcome!" FontSize="24" FontAttributes="Bold" 
               TextColor="Black" HorizontalOptions="Center"/>

        <Label x:Name="UserEmailLabel" Text="user@example.com" FontSize="18" TextColor="Gray"
               HorizontalOptions="Center"/>

        <!-- Logout Button -->
        <Button Text="Logout" BackgroundColor="#9b6738" TextColor="White" FontSize="18"
                Clicked="OnLogoutClicked"/>

    </VerticalStackLayout>

</ContentPage>
